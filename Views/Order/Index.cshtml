@{
    ViewData["Title"] = "Index";
}

@model List<Order>

    <div class="container mt-4">
            <h2>Pedidos</h2>
            <a href="" class="btn btn-primary mb-2">Crear Nuevo Pedido</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                @order.Date.ToShortDateString()
                            </td>
                            <td>
                                @order.Client
                            </td>
                            <td>
                               <div class="btn-gruop">
                                <a href="" class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@order.OrderID">Detalles</a>
                                <a href="" class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@order.OrderID">Editar</a>
                                <a href="" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@order.OrderID">Eliminar</a>
                               </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>